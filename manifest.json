{
  "manifest_version": 2,
  "name": "metacode",
  "version": "1.0.0",
  "description": "元数据扩展",
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "homepage_url": "https://www.baidu.com",
  "permissions": ["tabs", "storage", "http://*/*", "https://*/*"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "元数据扩展字段生成工具"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/jquery.js", "js/content-script.js"],
      "run_at": "document_end"
    }
  ]
}
